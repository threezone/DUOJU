@{
    ViewBag.Title = "客户列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid" style="margin-top: 10px;">
        <div class="span12">
            <div class="alert fade in" style="margin-bottom: 10px;">
                <button type="button" class="close" data-dismiss="alert">
                    ×</button>
                <strong>提示!</strong> 如果申请的客户在7天内没有跟进或跟进无进展，将回收回客户池
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-user"></i></span>
                    <div class="btn-group" data-toggle="buttons-radio" style="margin-top: 3px; margin-left: 5px;">
                        <button id="btnAllDay" type="button" class="btn btn btn-info">
                            全部</button>
                        <button id="btnToday" type="button" class="btn btn btn-info">
                            今天跟进</button>
                        <button id="btnTwoDay" type="button" class="btn btn btn-info">
                            未来两天跟进</button>
                        <button id="btnSevenDay" type="button" class="btn btn btn-info">
                            未来七天跟进</button>
                    </div>
                    <span style="margin-right: 10px;"></span>
                    <div class="input-append date" id="startDate"  style="margin-top:3px;margin-bottom:0;margin-right:-4px;">
                        <input id="start" size="10" type="text" value="" placeholder="开始时间" style="width:110px;" />
                    </div>
                    <div class="input-append date" id="endDate" style="margin-top:3px;margin-bottom:0;">
                        <input id="end" size="10" type="text" value="" placeholder="结束时间" style="width:110px;" />
                        <span id="btnFilterDate" class="add-on"><i class="icon-calendar"></i></span>
                    </div>
                    <div class="div_search">
                        <input id="txtSearch" type="text" placeholder="客户名 或 负责人" />
                        <button type="input" id="btnSearch" class="tip-bottom" title="Search">
                            <i class="icon-search icon-white"></i>
                        </button>
                    </div>
                </div>
                <div id="divTable" class="widget-content nopadding">
                    <table style="width: 100%; height:100%;" id="tb_supplier">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/supplier/supplierList.js")"></script>
}

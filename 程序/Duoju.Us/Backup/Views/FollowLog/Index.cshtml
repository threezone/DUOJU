@{
    ViewBag.Title = "跟进记录列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="row-fluid" style="margin-top: 0;">
                <div class="span12" style="margin-bottom: 10px;">
                    <div class="form-search">
                        <div class="input-append date" id="startDate" name="start" data-date="" data-date-format="yyyy/mm/dd">
                            <input size="10" type="text" value="" placeholder="开始时间" />
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div>
                        <span style="margin-right: 15px;"></span>
                        <div class="input-append date" id="endDate" name="end" data-date="" data-date-format="yyyy/mm/dd">
                            <input size="10" type="text" value="" placeholder="结束时间" />
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div>
                        <span style="margin-right: 15px;"></span>
                        <input id="txtSearch" class="input-medium search-query span4" type="text" placeholder="客户名 或 联系人" />
                        <button id="btnSearch" type="button" class="btn btn-primary">查找</button>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div id="divTable" class="span12">
                    <table style="width: 100%; height:100%;" id="tb_followLog">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/followlog/index.js")"></script>
}

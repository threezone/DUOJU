@{
    ViewBag.Title = "FollowLogGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="form-search well" style="margin-bottom:0; border:1px solid #CDCDCD; border-bottom:0; padding:15px 19px;">
                <div style="float:left;margin-right: 45px;margin-top: 5px;">
                    <a id="add-event" data-toggle="modal" href="#modal-container-449304" class="btn btn-inverse btn-small">
                        <i class="icon-map-marker icon-white"></i>&nbsp;&nbsp;&nbsp;选择统计区域</a>
                </div>
                <div style="width: 200px; float: left; margin-top: 4px; margin-right: 25px;">
                    <select id="selectFollowBy">
                        <option value="" selected="selected">全部跟进人</option>
                    </select>
                </div>
                <div class="input-append date" id="startDate" style="margin-top: 3px; margin-bottom: 0;
                    margin-right: -4px;">
                    <input id="start" size="10" type="text" value="" placeholder="开始时间" style="width: 110px;" />
                </div>
                <div class="input-append date" id="endDate" style="margin-top: 3px; margin-bottom: 0;">
                    <input id="end" size="10" type="text" value="" placeholder="结束时间" style="width: 110px;" />
                    <span id="btnFilterDate" class="add-on"><i class="icon-calendar"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box" style="margin-top:0;">
                <div id="divTable" class="widget-content nopadding">
                    <table style="width: 100%; height: 100%;" id="tb_fllowLogGroup">
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="modal-container-449304" class="modal hide fade" role="dialog" aria-labelledby="editPositionModal"
        aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h3 id="myModalLabel">
                选择要统计的区域
            </h3>
        </div>
        <div class="modal-body">
            <div class="row-fluid" style="height: 120px;">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="span4"> 
                            <select name="provinceId" id="selectProvince">
                                <option value="">请选择省份</option>
                            </select>
                        </div>
                        <div class="span4">
                            <select name="cityId" id="selectCity">
                                <option value="">请选择城市</option>
                            </select>
                        </div>
                        <div class="span4">
                            <select name="disrtictId" id="selectDistict" class="required">
                                <option value="">请选择区域</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input id="btnLoadPosition" type="button" value="确定" class="btn btn-success" />
            <span style="margin-left: 20px;"></span>
            <input type="button" class="btn" data-dismiss="modal" value="取消" />
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/followLog/followLogGroup.js")"></script>
}

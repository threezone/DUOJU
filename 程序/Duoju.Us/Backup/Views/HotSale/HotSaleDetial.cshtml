@{
    ViewBag.Title = "HotSaleDetial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Text.RegularExpressions
@model YCF.CRM.Model.Entity.HotSale
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title" id="divHotSaleTitle">
                <span class="icon"><i class="icon-briefcase"></i></span>
                <h5>
                    爆单产品详情</h5>
            </div>
            @{ var rate = Model.Rate.GetValueOrDefault(0); }
            <div class="widget-content">
                <div class="row-fluid" style="margin-bottom: 10px;">
                    <div class="span3">
                        <div class="widget-img">
                            <img alt="要出发CRM爆单库" src="@Model.ImgUrl" />
                        </div>
                        <div style="background: #ff7416;margin-top: 10px;height: 24px;padding: 10px 15px;">
                            <a style="color: white;font-size: 16px;" id="testorder" href="javascript:void(0);">
                            <span style="font-size:12px;font-weight: 500;">团购价：</span><strong style="vertical-align: middle;margin-right:10px;">￥@Model.TuanPrice</strong>
                            <span style="font-size:12px;font-weight: 500;">销量：</span><strong style="vertical-align: middle;margin-right:10px;">@Model.SaleVolume</strong>
                            <span style="font-size:12px;font-weight: 500;">评分：</span><strong style="vertical-align: middle;">@rate</strong>
                            </a>
                        </div>
                    </div>
                    <div class="span8">
                        <table id="tbHotSaleInfo" class="table table-bordered table-invoice" style="font-size: 13px;">
                            <tbody>
                                <tr>
                                    <td class="width20" style="width: 10%;">
                                        产品名称
                                    </td>
                                    <td class="width80">
                                        <a target="_blank" href="@Model.Url">@Model.ProductName </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        产品评分
                                    </td>
                                    <td>
                                        @rate 分
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        销售时间
                                    </td>
                                    <td>
                                        @Model.StartDate.Value.ToString("yyyy-MM-dd")&nbsp;&nbsp;至&nbsp;&nbsp;@Model.EndDate.Value.ToString("yyyy-MM-dd")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        价格/销量
                                    </td>
                                    <td>
                                        <span style="margin-right:15px;">门市价：￥@Model.Price</span>
                                        <span style="margin-right:15px;">团购价：￥@Model.TuanPrice</span>
                                        <span style="margin-right:15px;">总销量：@Model.SaleVolume</span>
                                        <span style="margin-right:15px;">日均销量：@{
                                            TimeSpan ts1 = new TimeSpan(Model.StartDate.Value.Ticks);
                                            TimeSpan ts2 = new TimeSpan(Model.EndDate.Value.Ticks);
                                            TimeSpan ts = ts1.Subtract(ts2).Duration();
                                            var daySale = Model.SaleVolume / ts.Days;
                                        }
                                        @daySale 份/天</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="width20">
                                        供应商
                                    </td>
                                    <td class="width80">
                                        @Model.Provider
                                    </td>
                                </tr>
                                <tr>
                                    <td class="width20">
                                        商家电话
                                    </td>
                                    <td class="width80">
                                        @Model.Phone
                                    </td>
                                </tr>
                                <tr>
                                    <td class="width20">
                                        商家地址
                                    </td>
                                    <td class="width80">
                                        @Model.Address
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        交通信息
                                    </td>
                                    <td>
                                        @Model.Traffic
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span11">
                        <table id="tbHotSaleContentInfo" class="table table-bordered table-invoice-full" style="font-size: 13px;">
                            <thead>
                                <tr>
                                    <th class="head0" style="width: 15%;">
                                        数量/规格
                                    </th>
                                    <th class="head1">
                                        内容
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{string[] contentList = Regex.Split(Model.ProductContent, "&&", RegexOptions.IgnoreCase);}
                                @foreach (var content in contentList)
                                {
                                    var c = content.Split('x');
                                    <tr>
                                        <td>@c[1]
                                        </td>
                                        <td>@c[0]
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span11" style="margin-bottom: 10px;">
                        <div style="font-size: 13px;">
                            <h4>
                                产品介绍</h4>
                            @{ var intro = string.IsNullOrEmpty(Model.Intro) ? "暂无介绍" : Model.Intro; }
                            @intro
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span11" style="margin-bottom: 20px;">
                        <div style="font-size: 13px;">
                            <h4>
                                个性点评</h4>
                            @{ var evaluate = string.IsNullOrEmpty(Model.Evaluate) ? "暂无点评" : Model.Evaluate; }
                            @evaluate
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/hotsale/hotsaledetial.js")"></script>
}

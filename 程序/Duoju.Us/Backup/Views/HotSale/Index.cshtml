@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-user"></i></span>
                    <h5>
                        爆单库</h5>
                    <div class="div_search">
                        <input id="txtSearch" type="text" placeholder="产品名" />
                        <button type="input" id="btnSearch" class="tip-bottom" title="Search">
                            <i class="icon-search icon-white"></i>
                        </button>
                    </div>
                </div>
                <div id="divTable" class="widget-content nopadding">
                    <table style="width: 100%; height: 300px;" id="tb_hotSale">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/hotsale/index.js")"></script>
}

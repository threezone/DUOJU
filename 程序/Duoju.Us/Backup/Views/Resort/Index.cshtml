@{
    ViewBag.Title = "GetResortList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-user"></i></span>
                    <span style="margin-right: 10px;"></span>
                    <div class="div_search">
                        <input id="txtResortId" type="text" placeholder="酒店编号" />
                        <input id="txtResortName" type="text" placeholder="酒店名" />
                        <button type="input" id="btnSearch" class="tip-bottom" title="Search">
                            <i class="icon-search icon-white"></i>
                        </button>
                    </div>
                </div>
                <div id="divTable" class="widget-content nopadding">
                    <table style="width: 100%; height:100%;" id="tb_resort">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/resort/resortList.js")"></script>
}
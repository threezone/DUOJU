@{
    ViewBag.Title = "权限管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="@Url.Content("~/Content/css/zTreeStyle/zTreeStyle.css")" />
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-key"></i></span>
                    <h5>
                        权限管理</h5>
                    <div class="div_search">
                        <input id="txtSearch" type="text" placeholder="用户名" />
                        <button type="input" id="btnSearch" class="tip-bottom" title="Search">
                            <i class="icon-search icon-white"></i>
                        </button>
                    </div>
                </div>
                <div id="divTable" class="widget-content nopadding">
                    <table style="width: 100%; height: 100%;" id="tb_user_authority">
                    </table>
                </div>
                @using (Html.BeginForm("AuthorityManager", "Account", FormMethod.Post, new { @id = "formAuthority" }))
                {
                    <div id="modal-authority" class="modal hide fade" role="dialog" aria-labelledby="modal-authority"
                        aria-hidden="true">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h3 id="myModalLabel">
                                权限分配
                            </h3>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="hidCurrentAuthority" name="currentAuthority" value="" />
                            <input type="hidden" id="hidAddAuthority" name="addAuthority" value="" />
                            <input type="hidden" id="hidRemoveAuthority" name="removeAuthority" value="" />
                            <input type="hidden" id="hidUserId" name="userId" value="" />
                            <div style="min-height: 350px;">
                                <ul id="treeAuthority" class="ztree">
                                </ul>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="btnSave" type="submit" class="btn btn-success">
                                保存设置</button>
                            <button class="btn" data-dismiss="modal" aria-hidden="true">
                                取消</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section footSection
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/zTree/jquery.ztree.core-3.5.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/zTree/jquery.ztree.excheck-3.5.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/account/authorityManager.js")"></script>
}
